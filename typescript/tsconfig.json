{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "rootDir": "./",
    "outDir": "./dist",
    "module": "commonjs",

    "strict": true,
    "alwaysStrict": true,

    "checkJs": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,  // 装饰器元数据
    "experimentalDecorators": true, // 装饰器
    "noFallthroughCasesInSwitch": true,


    "noImplicitAny": true,
    "noImplicitThis": true,
  },
  "include": ["./src"],
  "exclude": ["dist"]
}